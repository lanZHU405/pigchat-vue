{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist/node",
    "rootDir": "./"
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules"]
}